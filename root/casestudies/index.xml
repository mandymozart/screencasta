<?xml version="1.0" encoding="UTF-8"?>
<!-- containa
    data-dependency:
        master - force their head, and classification in case of submerging it to other containers
        slave - any classification will be inherited from master

-->
<containa data-type="screencasta" data-global-containa-identifier="GCI-1" data-dependency="master">

    <head>
        <!-- meta data will be mandatory also for catalog options across listings, search-engines, etc. -->
        <meta>
            <title>Case Studies</title>
            <author>Containa</author>
            <!-- TODO: RDF semantics go here -->
            <!-- Identifier
                 type: gci, isbn, drm, label-code, custom -->
            <unique-identifier data-type="custom"></unique-identifier>
        </meta>
        <!-- Presets give the containa it's shape and basic functionality and allow templating
             type: global, local => /presets/ -->
        <preset data-type="global">
            <!-- global, local => /presets/tmpl/ -->
            <template data-type="global"></template>
            <!-- global, local => /presets/css/ -->
            <stylesheet data-type="global"></stylesheet>
            <!-- global, local => /presets/js/ -->
            <script data-type="global"></script>
        </preset>
    </head>

    <!-- prolog, epilog, chapter, page are set to inherit data-type; fluid is fallback value (standard ebook)-->
    <body data-type="fixed">

        <prolog>

            <page data-type="fixed-hero">
                <headline data-allowed="plain-text"></headline>
                <subtitle data-allowed="basic-html"></subtitle>
            </page>

        </prolog>

        <chapter data-type="fixed">

            <title>David BÃ¶nsch (musician)</title>

            <page data-type="inherit">
                <!-- Image Tag promtes upload utility, if set to internal, flickr, or any kind of 3rd party hoster -->
                <image id="master" data-type="internal" data-allowed="png,jpg,gif,svg"></image>
                <title>What Dave does!</title>
                <textblock data-type="description" data-allowed="">
                    Dave is a Music-Man who has his own band and plays gigs.
                </textblock>
            </page>

            <page data-type="inherit">
                <image id="master" data-type="internal" data-allowed="png,jpg,gif,svg"></image>
                <title>What is Daves network!</title>
                <textblock data-type="description">
                    Get people to see how he is doing his "thing" and make 'em spend their coins for his swag!
                </textblock>
            </page>

            <page data-type="empty"></page>

        </chapter>

        <epilog>

            <page data-type="fluid">
                <!-- breaks scope and continues on new one; page is fallback value (page, chapter, containa) -->
                <break data-type="page" />
            </page>

        </epilog>

    </body>
</containa>